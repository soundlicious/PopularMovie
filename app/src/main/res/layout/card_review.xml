<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_comments_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_review_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Author" />

        <view
            android:id="@+id/view2"
            class="android.support.design.internal.BaselineLayout"
            id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_review_author" />

        <TextView
            android:id="@+id/textView_review_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            tools:text="y VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery VeryVery Very" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>